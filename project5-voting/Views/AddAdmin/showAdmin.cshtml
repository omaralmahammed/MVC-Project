@model IEnumerable<project5_voting.Models.Admin>

@{
    ViewBag.Title = "showAdmin";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}


<div class="container mt-5">

    <h2 class="mb-4 text-center" style="color:black">Admin Names</h2>

    <table class="table table-hover">
        <thead class="thead-dark">
            <tr>
                <th></th>
                <th scope="col" class="sortable" data-sort="status">Name </th>
                <th scope="col" class="sortable" data-sort="partyName">Email </th>
            </tr>
        </thead>
        <tbody>
            @{var n = 1;}

            @foreach (var item in Model)
            {
                <tr class="party-row">
                    <td>
                        <div class="d-flex flex-column">
                            <span>@n </span>
                        </div>
                    </td>
                    <td>
                        <div class="d-flex flex-column">
                            <span>@Html.DisplayFor(modelItem => item.name)</span>
                        </div>
                    </td>
                    <td>
                        <div class="d-flex flex-column">
                            <span>@Html.DisplayFor(modelItem => item.email)</span>
                        </div>
                    </td>
                </tr>
                n++;
            }
        </tbody>
    </table>


    @Html.ActionLink("Add Admins", "addAdmain", null, new { @class = "btn is-link is-inverted", style = "background-color:#004080; color:white" })

</div>


<style>
    .container {
        background-color: #f8f9fa;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .animated-header {
        animation: fadeIn 2s ease-in-out;
    }

    .btn-group .btn {
        margin-right: 5px;
        transition: background-color 0.3s ease, transform 0.3s ease;
        background-color: #004080;
    }

        .btn-group .btn:hover {
            transform: scale(1.05);
        }

    .table-hover tbody tr:hover {
        background-color: #e9ecef;
        transform: translateY(-3px);
        transition: transform 0.2s ease-in-out;
    }

    .table img {
        height: 50px;
        width: 50px;
        object-fit: cover;
        border-radius: 50%;
    }

    .badge-success {
        background-color: #28a745;
        color: #ffffff;
    }

    .badge-secondary {
        background-color: #6c757d;
        color: #ffffff;
    }

    .sortable {
        cursor: pointer;
        position: relative;
        color: #2c3e50;
    }

        .sortable .sort-icon {
            font-size: 0.8rem;
            margin-left: 5px;
        }

    thead.thead-dark {
        background-color: #2c3e50; /* Navy blue color */
        color: white;
    }

    keyframes fadeIn {
        to

    {
        opacity: 1;
    }
    }
</style>


