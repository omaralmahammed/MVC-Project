@model project5_voting.Models.Ad

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";

}

<div class="container mt-5">
    <h2 class="text-center mb-4">تفاصيل الإعلان</h2>

    <div class="card mx-auto mt-4" style="max-width: 600px;">
        <div class="card-body">
            <h4 class="card-title">إعلان</h4>
            <hr />
            <dt class="col-sm-4">
                الاسم:
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.nationalId)
            </dd>


            <dt class="col-sm-4">
                الدائرة الانتخابية:
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.electionArea)
            </dd>

            <dt class="col-sm-4">
                القائمة الانتخابية
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.listId)
            </dd>

            <dt class="col-sm-4">
                اسم الحزب
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.partyName)
            </dd>

            <dt class="col-sm-4">
                شعار الحملة الانتاخبية
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.data)
            </dd>

            <dt class="col-sm-4">
                الشرح:
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.description)
            </dd>

            <dt class="col-sm-4">
                <img src="~/images/@(Model.URL)" alt="Image" width="150" height="150" />
                @Html.DisplayNameFor(model => model.URL)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.URL)
            </dd>

            <dt class="col-sm-4">
                الحالة
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.status)
            </dd>
            </dl>

            <div class="text-center">
                @Html.ActionLink("العودة للقائمة", "advertisementAdmin", null, new { @class = "btn btn-success" })
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
