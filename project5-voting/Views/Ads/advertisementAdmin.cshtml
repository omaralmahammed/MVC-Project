@model IEnumerable<project5_voting.Models.Ad>

@{
    ViewBag.Title = "advertisementAdmin";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}


<div class="container mt-5" dir="rtl">
    <h2 class="text-center mb-4">طلبات الاعلانات</h2>

    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>اسم المرشح</th>
                <th>شعار الحملة</th>
                <th>الدائرة الانتخابية</th>
                <th>اسم القائمة</th>
                <th>اسم الحزب</th>
                <th>وصف الحملة</th>
                <th>صورة المرشح</th>
                <th>@Html.DisplayNameFor(model => model.status)</th>
                <th>الإجراءات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.nationalId)</td>
                    <td>@Html.DisplayFor(modelItem => item.electionArea)</td>
                    <td>@Html.DisplayFor(modelItem => item.listId)</td>
                    <td>@Html.DisplayFor(modelItem => item.partyName)</td>
                    <td>@Html.DisplayFor(modelItem => item.data)</td>
                    <td>@Html.DisplayFor(modelItem => item.description)</td>
                    <td>
                        <img src="~/Images/@item.URL" alt="No Image" width="100" height="100" class="img-fluid" />
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.status)</td>
                    <td>
                        <div class="btn-group" role="group" aria-label="Action Buttons">
                            @Html.ActionLink("رؤية التفاصيل", "Details", new { id = item.id }, new { @class = "btn btn-info btn-sm" })

                            @if (item.status != "تم نشر الاعلان")
                            {
                                @Html.ActionLink("نشر", "Publish", new { id = item.id }, new { @class = "btn btn-success btn-sm" })
                            }

                            @Html.ActionLink("حذف", "Delete", new { id = item.id }, new { @class = "btn btn-danger btn-sm" })

                        </div>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .btn-group .btn {
        margin-right: 3px;
        margin-left: 5px;
        float:right;
    }


</style>

