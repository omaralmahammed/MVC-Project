@model IEnumerable<project5_voting.Models.Contact>

@{
    ViewBag.Title = "AdminContact";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<h2 class="text-center my-4">جهات الاتصال الإدارية</h2>

<div class="container" dir="rtl">
    <table class="table table-bordered table-hover">
        <thead class="thead-light">
            <tr>
                <th>
                    @Html.Label("الاسم ", htmlAttributes: new { @class = "control-label col-md-8" })
                </th>
                <th>
                    @Html.Label("البريد الالكتروني ", htmlAttributes: new { @class = "control-label col-md-8" })
                </th>
                <th>
                    @Html.Label("البيانات ", htmlAttributes: new { @class = "control-label col-md-8" })

                </th>
                <th>
                    @Html.Label("التاريخ ", htmlAttributes: new { @class = "control-label col-md-8" })
                </th>
                <th>
                    @Html.Label("الموضوع ", htmlAttributes: new { @class = "control-label col-md-8" })

                </th>
                <th>
                    @Html.Label("الرسالة ", htmlAttributes: new { @class = "control-label col-md-8" })

                </th>
                <th>
                    @Html.Label("الحالة ", htmlAttributes: new { @class = "control-label col-md-8" })

                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.time)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.subject)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.message)
                    </td>
                    <td class="text-center">
                        @{
                            if (item.status == null)
                            {
                                <span class="text-danger">Incomplete</span>
                            }
                            else
                            {
                                <span class="text-success">Completed</span>
                            }
                        }
                    </td>
                    <td class="text-center">
                        @if (item.status == null)
                        {
                            @Html.ActionLink("رد", "Response", new { id = item.id }, new { @class = "btn btn-info btn-sm ml-1" })
                        }
                        else
                        {
                            <button class="btn btn-info btn-sm ml-1" onclick="displayAlert()">رد</button>
                        }

                        @Html.ActionLink("التفاصيل", "ContactDetails", new { id = item.id }, new { @class = "btn btn-secondary btn-sm ml-1" })

                        <a href="@Url.Action("Delete", new { id = item.id })" class="btn btn-danger btn-sm ml-1">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z" />
                                <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z" />
                            </svg>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script type="text/javascript">
    function displayAlert() {
        Swal.fire("لقد تم الرد على هذه الرسالة من قبل");
    }
</script>
