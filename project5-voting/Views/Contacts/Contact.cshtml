@model project5_voting.Models.Contact

@{
    ViewBag.Title = "اتصل بنا";
}

<section class="ftco-section mt-5" dir="rtl">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12">
                <div class="row">
                    <!-- Image Column -->
                    <div class="col-md-6 d-flex align-items-center">
                        <img src="~/images/jordan.jpeg" alt="Contact Image" class="img-fluid rounded" style="max-width: 100%;">
                    </div>

                    <!-- Form Column -->
                    <div class="col-md-6">
                        <div class="bg-white border rounded shadow-sm p-4">
                            <h4 class="text-center mb-4">نموذج الاتصال</h4>
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                <div class="form-group row">
                                    <label class="col-md-3">الاسم </label>
                                    <div class="col-md-9">
                                        @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control", placeholder = "أدخل اسمك" } })
                                        @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-md-3">الايميل </label>
                                    <div class="col-md-9">
                                        @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control", placeholder = "أدخل بريدك الإلكتروني" } })
                                        @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-md-3">الموضوع </label>
                                    <div class="col-md-9">
                                        @Html.EditorFor(model => model.subject, new { htmlAttributes = new { @class = "form-control", placeholder = "أدخل موضوع الرسالة" } })
                                        @Html.ValidationMessageFor(model => model.subject, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-md-3">الرساله </label>
                                    <div class="col-md-9">
                                        @Html.TextBoxFor(model => model.message, new { @class = "form-control", placeholder = "أدخل رسالتك" })
                                        @Html.ValidationMessageFor(model => model.message, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <br />

                                <div class="form-group row">
                                    <div class="col-md-12 text-center">
                                        <input type="submit" value="إرسال" class="btn btn-primary" style="width:300px" />
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
