@model project5_voting.Models.Contact

@{
    ViewBag.Title = "Delete";
}

<main>
    <div class="card" dir="rtl" style="width: 700px; margin: 20px auto; text-align: center;">
        <div class="card-body">

            <img src="~/images/delete.png" alt="Alternate Text" width="100" height="100" class="mb-4" />

            <h3>هل أنت متأكد أنك تريد الحذف؟</h3>

            <div class="mt-4">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="حذف" class="btn btn-danger mx-2" />
                        @Html.ActionLink("العودة", "AdminContact", "Contacts", new { area = "" }, new { @class = "btn btn-secondary mx-2" })
                    </div>
                }
            </div>
        </div>
    </div>
</main>
