@model project5_voting.Models.Contact

@{
    ViewBag.Title = "Response";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";

}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="card" dir="rtl" style="width: 700px; margin:20px auto" >
    <div class="card-body">

        <h5 class="card-title text-center mb-4">رد</h5>

        <div class="row g-3">
            <div class="col-md-6">
                <label class="form-label">الاسم</label>
                @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            </div>
            <div class="col-md-6">
                <label class="form-label">البريد الإلكتروني</label>
                @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            </div>

            <div class="col-12">
                <label class="form-label">اسم المسؤول</label>
                @Html.EditorFor(model => model.adminName, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            </div>

            <div class="col-12">
                <label class="form-label">الموضوع</label>
                @Html.EditorFor(model => model.subject, new { htmlAttributes = new { @class = "form-control" } })
            </div>

            <div class="col-12">
                <label class="form-label">الرد على الرسالة</label>
                @Html.TextAreaFor(model => model.answered, new { @class = "form-control", @id = "floatingTextarea", @style = "height: 100px;" })
            </div>

            <div style="display: none">
                @Html.EditorFor(model => model.date, new { htmlAttributes = new { @class = "form-control" } })
                @Html.EditorFor(model => model.time, new { htmlAttributes = new { @class = "form-control" } })
                @Html.EditorFor(model => model.message, new { htmlAttributes = new { @class = "form-control" } })
                @Html.EditorFor(model => model.status, new { htmlAttributes = new { @class = "form-control" } })
                @Html.EditorFor(model => model.responseDate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.EditorFor(model => model.responseTime, new { htmlAttributes = new { @class = "form-control" } })
            </div>

            <div class="text-center mt-4">
                @Html.ActionLink("العودة", "AdminContact", "Contacts", new { @class = "btn btn-secondary mx-2" })
                <input type="submit" value="إرسال" class="btn btn-primary mx-2" />
            </div>
        </div>

    </div>
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
