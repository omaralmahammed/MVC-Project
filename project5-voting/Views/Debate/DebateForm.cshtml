@model project5_voting.Models.Debate

@{
    ViewBag.Title = "DebateForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card">
                <div class="card-body">
                    <h2 class="text-center">نموذج المناظرة</h2>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal" style="direction: rtl;">
                            <h4>بيانات المناظرة</h4>
                            <hr />

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group row my-3">
                            @Html.Label("الدائرة الانتخابية", htmlAttributes: new { @class = "control-label col-md-3" })

                            <div class="col-md-9">
                                @Html.EditorFor(model => model.electionArea, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.electionArea, "", new { @class = "text-danger" })
                            </div>
                        </div>

                            <div class="form-group row my-3">
                                @Html.Label("اسم المرشح الاول ", htmlAttributes: new { @class = "control-label col-md-3" })
                                <div class="col-md-9">
                                    @Html.EditorFor(model => model.firstCandidate, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.firstCandidate, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group row my-3">
                                @Html.Label("الرقم الوطني للمرشح", htmlAttributes: new { @class = "control-label col-md-3" })
                                <div class="col-md-9">
                                    @Html.EditorFor(model => model.firstCandidateID, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.firstCandidateID, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group row my-3">
                                @Html.Label("اسم القائمة ", htmlAttributes: new { @class = "control-label col-md-3" })
                                <div class="col-md-9">
                                    @Html.EditorFor(model => model.firstCandidateList, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.firstCandidateList, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group row my-3">
                                @Html.Label("اسم المرشح الثاني", htmlAttributes: new { @class = "control-label col-md-3" })
                                <div class="col-md-9">
                                    @Html.EditorFor(model => model.secondCandidate, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.secondCandidate, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group row my-3">
                                @Html.Label("الرقم الوطني للمرشح", htmlAttributes: new { @class = "control-label col-md-3" })
                                <div class="col-md-9">
                                    @Html.EditorFor(model => model.secondCandidateID, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.secondCandidateID, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group row my-3">
                                @Html.Label("اسم القائمة ", htmlAttributes: new { @class = "control-label col-md-3" })
                                <div class="col-md-9">
                                    @Html.EditorFor(model => model.secondCandidateList, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.secondCandidateList, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group row my-3">
                                @Html.Label("موضوع المناظرة", htmlAttributes: new { @class = "control-label col-md-3" })
                                <div class="col-md-9">
                                    @Html.EditorFor(model => model.subject, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.subject, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group row my-3">
                                @Html.Label("وصف", htmlAttributes: new { @class = "control-label col-md-3" })
                                <div class="col-md-9">
                                    @Html.EditorFor(model => model.message, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.message, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group row my-3">
                                <div class="col-md-12 text-center">
                                    <button type="submit" class="btn btn-primary">إرسال</button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
