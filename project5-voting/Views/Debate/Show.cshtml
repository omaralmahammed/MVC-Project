@if (ViewBag.ElectionAreia == null && ViewBag.CheckID == null)
{
    <script type="text/javascript">
        function displayAlert() {
            Swal.fire({
                icon: "error",
                title: "!نعتذر",
                text: "معلومات القائمة و الرقم الوطني غير صحيحة للمرشحين",
            });
        }
    </script>
}
else if (ViewBag.CheckID == null)
{
    <script type="text/javascript">
        function displayAlert() {
            Swal.fire({
                icon: "error",
                title: "!نعتذر",
                text: "يوجد خطأ في الرقم الوطني",
            });
        }
    </script>
}
else if (ViewBag.ElectionAreia == null)
{
    <script type="text/javascript">
        function displayAlert() {
            Swal.fire({
                icon: "error",
                title: "!نعتذر",
                text: "المرشحين لا ينتمون لنفس القائمة",
            });
        }
    </script>
}
else if (ViewBag.ElectionAreia == true && ViewBag.CheckID == true)
{
    <script type="text/javascript">
        function displayAlert() {
            Swal.fire({
                icon: "success",
                title: "المعلومات صحيحة",
                text: "يمكنك اكمال الاجراءات ",
            });
        }
    </script>
