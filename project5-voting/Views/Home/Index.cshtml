    ViewBag.Title = "الصفحة الرئيسية";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

<!-- Carousel Start -->
<div class="container-fluid px-0 mb-5">
    <div id="header-carousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="w-100" src="~/img/14.jpg" alt="Image">
                <div class="carousel-caption">
                    <div class="container">
                        <div class="row justify-content-start">
                            <div class="col-lg-8 text-start">
                                <p class="fs-4 text-white">مرحباً بكم في موقع انتخابات الأردن</p>
                                <h1 class="display-1 text-white mb-5 animated slideInRight">الانتخابات الأردنية</h1>
                                <a href="" class="btn btn-secondary rounded-pill py-3 px-5 animated slideInRight">استكشاف المزيد</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <img class="w-100" src="~/img/1.jpg" alt="Image">
                <div class="carousel-caption">
                    <div class="container">
                        <div class="row justify-content-end">
                            <div class="col-lg-8 text-end">
                                <p class="fs-4 text-white">مرحباً بكم في موقع انتخابات الأردن</p>
                                <h1 class="display-1 text-white mb-5 animated slideInRight">أفضل الانتخابات النزيهة والشفافة</h1>
                                <a href="" class="btn btn-secondary rounded-pill py-3 px-5 animated slideInLeft">استكشاف المزيد</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#header-carousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">السابق</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#header-carousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">التالي</span>
        </button>
    </div>
</div>
<!-- Carousel End -->
<!-- About Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="row g-5 align-items-end">
            <div class="col-lg-6">
                <div class="row g-2">
                    <div class="col-6 position-relative wow fadeIn" data-wow-delay="0.7s">
                        <div class="about-experience rounded" style="background-color: #862632;">
                            <h1 class="display-1 mb-0">25</h1>
                            <small class="fs-5 fw-bold" style="color:black;">عام من العطاء</small>
                        </div>
                    </div>
                    <div class="col-6 wow fadeIn" data-wow-delay="0.1s">
                        <img class="img-fluid rounded" src="~/image/1.jpg">
                    </div>
                    <div class="col-6 wow fadeIn" data-wow-delay="0.3s">
                        <img class="img-fluid rounded" src="~/image/12.jpg">
                    </div>
                    <div class="col-6 wow fadeIn" data-wow-delay="0.5s">
                        <img class="img-fluid rounded" src="~/image/12.jpg">
                    </div>
                </div>
            </div>
            <div class="col-lg-6 wow fadeIn" data-wow-delay="0.5s">
                <p class="section-title bg-white text-start text-primary pe-3">عنا</p>
                <h1 class="mb-4">اعرف عن انتخابات الأردن وتاريخها</h1>
                <p class="mb-4">تجربة انتخابية نزيهة وشفافة تسعى إلى تعزيز الديمقراطية في الأردن. من التسجيل إلى التصويت، نضمن لكم المشاركة السهلة والفعالة في العملية الانتخابية.</p>
                <div class="row g-5 pt-2 mb-5">
                    <div class="col-sm-6 text-center">
                        <div class="service-icon mb-4">
                            <i class="fas fa-vote-yea fa-3x text-primary"></i>
                        </div>
                        <h5 class="mb-3">خدمات مخصصة</h5>
                        <span>نقدم لكم مجموعة متنوعة من الخدمات المخصصة لضمان تجربة انتخابية مريحة وسلسة.</span>
                    </div>
                    <div class="col-sm-6 text-center">
                        <div class="service-icon mb-4">
                            <i class="fas fa-check-square fa-3x text-primary"></i>
                        </div>
                        <h5 class="mb-3">عملية انتخابية موثوقة</h5>
                        <span>نوفر لكم عملية انتخابية موثوقة ونزيهة لضمان نزاهة الانتخابات وجودتها.</span>
                    </div>
                </div>
                <a class="btn btn-secondary rounded-pill py-3 px-5" href="">استكشاف المزيد</a>
            </div>


        </div>
    </div>
</div>
<!-- About End -->
