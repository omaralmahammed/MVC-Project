@model project5_voting.Models.USER

@{
    ViewBag.Title = "إعادة تعيين كلمة المرور";
}

<style>
    body {
        background-color: #f8f9fa; /* Light gray background for the page */
    }

    .card {
        border: 2px solid #000000; /* Black border for the card */
    }

    .card-body {
        background-color: #ffffff; /* White background for the card body */
    }

    .card-title {
        color: #ff0000; /* Red color for the card title */
    }

    .form-control {
        border: 1px solid #000000; /* Black border for form controls */
    }

    .btn-primary {
        background-color: #28a745; /* Green background for the button */
        border-color: #28a745; /* Green border for the button */
        color: #ffffff; /* White text color for the button */
    }

        .btn-primary:hover {
            background-color: #218838; /* Darker green for button hover */
            border-color: #1e7e34; /* Darker green for button border on hover */
        }

    .text-danger {
        color: #dc3545; /* Red color for error messages */
    }

    /* Align labels to the right for RTL layout */
    .form-group label {
        text-align: right;
        display: block;
    }
</style>

<h2 class="text-center mb-4">@ViewBag.Title</h2>

<form id="resetPasswordForm" asp-action="ResetPassword" method="post" class="container mt-4" dir="rtl">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="card-title text-center">إعادة تعيين كلمة المرور</h4>
                    <hr />
                    <div class="form-group">
                        <label for="newPassword">كلمة المرور الجديدة:</label>
                        <input type="password" class="form-control" id="newPassword" name="NewPassword" required />
                    </div>
                    <div class="form-group">
                        <label for="confirmPassword">تأكيد كلمة المرور الجديدة:</label>
                        <input type="password" class="form-control" id="confirmPassword" name="ConfirmPassword" required />
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">إعادة تعيين كلمة المرور</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

