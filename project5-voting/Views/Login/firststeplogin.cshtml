@model project5_voting.Models.USER
@{
    ViewBag.Title = "تسجيل الدخول";
}
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<style>
    .login-wrap {
        border-radius: 8px;
        background-color: #ffffff; /* White background */
        border: 2px solid #000000; /* Black border */
    }

        .login-wrap .form-control {
            border: 1px solid #000000; /* Black border for form controls */
        }

        .login-wrap .btn {
            background-color: #28a745; /* Green background for buttons */
            color: #ffffff; /* White text color for buttons */
            border: none;
        }

        .login-wrap .btn-outline-dark {
            border: 1px solid #000000; /* Black border */
            color: #000000; /* Black text color */
        }

            .login-wrap .btn-outline-dark:hover {
                background-color: #000000; /* Black background on hover */
                color: #ffffff; /* White text color on hover */
            }

    .heading-section {
        color: #ff0000; /* Red color for the heading */
    }

    .form-group label {
        color: #000000; /* Black color for labels */
    }

    body {
        background-color: #f4f4f4; /* Light gray background for the page */
    }

    .login-wrap {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Soft shadow for better appearance */
    }
</style>

<section class="ftco-section mt-5" dir="rtl">
    <div class="container">
        <div class="row justify-content-center mb-5">
            <div class="col-md-6 text-center">
                <h2 class="heading-section">كل صوت مهم</h2>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="login-wrap p-4 bg-light border border-dark">
                    <h3 class="mb-4 text-center">تسجيل الدخول</h3>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.email, new { @class = "form-control", placeholder = "أدخل بريدك الإلكتروني", required = "required" })
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.NationalID, new { @class = "form-control", placeholder = "أدخل رقم الهوية الوطنية", required = "required" })
                        </div>
                        <div class="form-group">
                            @Html.PasswordFor(m => m.password, new { @class = "form-control", placeholder = "كلمة المرور", required = "required" })
                        </div>
                        <div class="form-group">
                            <input type="submit" value="تسجيل الدخول" class="btn btn-outline-dark" />
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.9.1/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
